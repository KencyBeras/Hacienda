@model List<CrudHacienda.Models.ProductosCLS>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mis Productos</h2>

<div class="row form-group">
    <!-- Button trigger modal -->
    <div class=" col-xs-8 col-lg-11 ">
        <button type="button" onclick="Agregar()" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Nuevo Producto</button>
    </div>
    <div class="col-xs-4 col-lg-1">
        @Html.ActionLink(" ", "Index", "Home", null, new { @class = "btn  btn-warning btn-sm glyphicon glyphicon-home" })
    </div>
</div>

<!--Lista de los productos que tenemos actualmente activos-->
@using (Ajax.BeginForm("Fproductos", "", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "DivPagina",
    InsertionMode = InsertionMode.Replace

}, new { @id = "frmsearch" }))
{
    <div class=" col-md-offset-8">
        @Html.TextBox("Producto", null, new { @class = "form-control col-md-12", @placeholder = "Ingrese su busqueda aqui..." })
    </div>
    <br />
    <div id="DivPagina" class="">
        @Html.Partial("_TablaProductos", Model)
    </div>

}

<!-- Modal: Esta ventana nos abrra un formulario flotante para agregar -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Nuevo Producto</h5>
            </div>
            @using (Ajax.BeginForm("AgregarProductos", "Productos", null, new AjaxOptions
            {
                HttpMethod = "POST",
                UpdateTargetId = "DivUser",
                InsertionMode = InsertionMode.Replace,
                OnSuccess = "AgregarProductos" //Funcion pendiente de crear
            }))
            {
                @Html.Hidden("Titulo")
                //Variable oculto
                <div class="modal-body">

                    <div class="form-group">
                        @Html.TextBox("Producto", null, new { @class = "form-control", placeholder = "Nombre Producto" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Descripcion", null, new { @class = "form-control", placeholder = "Descripcion" })
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="Estado" name="Estado">
                            <option value="">Estado (Seleccionar...)</option>
                            <option value=0>Inactivo</option>
                            <option value=1>Activo</option>
                        </select>
                    </div>

                    <div class="form-group">
                        @Html.TextBox("Fecha Creacion", null, new { @class = "form-control", placeholder = "Fecha" })
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" id="btnclose" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            }
        </div>
    </div>
</div>
<!--End Modal-->

<script>
    function BorrarProducto() {
        if (confirm("Realmente desea eliminar el producto?") == 1) {

            alert("Se elimino el producto satisfactoriamente.");
        }//Este script valida que realmente deseamos eliminar este registro
        else {
            event.preventDefault();
        }
    }

    var frmsearch = document.getElementById("frmsearch");
    var Producto = document.getElementById("Producto");
    Producto.onkeyup = function () {
        $("#frmsearch").trigger("submit");
    }


    function Agregar() {
        document.getElementById("Titulo").value = "1";
    }

    function AgregarProductos(res) {
        if (res == 1) {
            document.getElementById("btnclose").click();
            alert("Se guardaron los datos correctamente");
            $("#frmsearch").trigger("submit");
        }
        else {
            alert("Ocurrio un erro durante la insercion");
        }

    }
</script>

