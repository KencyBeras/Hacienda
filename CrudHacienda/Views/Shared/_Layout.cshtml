@using CrudHacienda.Models

<!DOCTYPE html>
<html>
<head>
     <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Hacienda</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand glyphicon glyphicon-home" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @foreach (MenuCLS omenuCLS in (List<MenuCLS>)Session["Rol"])
                    {
                        <li>@Html.ActionLink(omenuCLS.Mensaje, omenuCLS.NombreAccion, omenuCLS.NombreControlador)</li>
                    }
                    <li>@Html.ActionLink(" ", "CerrarSeccion", "Login", null, new { @class = "navbar-brand glyphicon glyphicon-log-out" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div>
        <!--body content -->
        <div class="container-fluid">
            <div class="test">

                @RenderBody()

            </div>
        </div>

        <!--footer-->
        <div class="bgper">
            <div class="container-fluid">
                <div class="row container">

                    <div class="col-md-4">
                        <h4>Hacieda MB</h4>
                        <img src="~/Content/img/vaca.png" alt="Smiley face" height="42" width="42">
                    </div>

                    <div class="col-md-4 center-block">

                    </div>

                    <div class="col-md-4 ">
                        <h4>Reportar Insidencias</h4>
                        <span>18092345678</span><br />
                        <span><a href="mailto:info@example.com">info@example.com</a> </span>
                    </div>
                </div>

                <div>
                    <p class="text-center">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </div>


            </div>
        </div>

        <style>
            .test {
                min-height: 920px;
                padding-bottom: 0px;
            }

            .bgper {
                background-color: black;
                color: white;
                padding-bottom: 0px;
                padding-top: 12px;
            }

            body {
                padding-bottom: 0px;
            }
        </style>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/notify.min.js"></script>

</body>
</html>